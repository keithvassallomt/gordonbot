{
  "extends": ["stylelint-config-standard", "stylelint-config-tailwindcss"],
  "rules": {
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": [
        "tailwind",
        "layer",
        "apply",
        "config",
        "variants",
        "responsive",
        "screen",
        "theme",
        "plugin",
        "custom-variant"
      ]
    }]
  }
}